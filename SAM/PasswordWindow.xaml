<Window x:Name="PasswordWindowDialog" x:Class="SAM.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAM"
        mc:Ignorable="d"
        Title="Password" Height="140" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True" Icon="steam_alt-10.ico">
    <Grid>
        <Button Content="OK" Margin="0,0,0,10" VerticalAlignment="Bottom" Click="Button_Click" HorizontalAlignment="Center" Width="70"/>
        <PasswordBox x:Name="PasswordTextBox" PasswordChar="•" PreviewKeyDown="PasswordTextBox_PreviewKeyDown" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Margin="10,0,10,20" VerticalAlignment="Center" Height="28"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top"/>
    </Grid>
</Window>
